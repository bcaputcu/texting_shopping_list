<h1>List</h1>

<div class="row">
	<div class="span2">
		<%= link_to "Add new item", new_item_path, class: "btn btn-success" %>
	</div>
</div>

<br>

<div class="row">
	<div class="span4">
		<table class="table table-bordered">
			<thead>				
				<tr>
					<th>#</th>
					<th>Name</th>
					<th>Done</th>
				</tr>
			</thead>
			<tbody>
				<% @items.each_with_index do |item, index| %>
				<tr>
					<td><%= index+1 %></td>
					<td><%= item.name %></td>
					<td><%= item.done %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>